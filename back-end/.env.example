# =============================================
# Configurações do Banco de Dados (Neon PostgreSQL)
# =============================================
DATABASE_URL='postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require'

# =============================================
# Autenticação JWT
# =============================================
JWT_SECRET=troque_por_uma_chave_secreta_forte
ADMIN_EMAIL=rh.admin
ADMIN_PASSWORD=sua_senha_aqui

# =============================================
# Servidor
# =============================================
PORT=3001
NODE_ENV=development

# =============================================
# URL da API (usada pelo front-end e CORS)
# =============================================
API_URL=http://localhost:3001

# Origens permitidas pelo CORS (separadas por vírgula)
CORS_ORIGIN=http://localhost:5501,http://127.0.0.1:5500
